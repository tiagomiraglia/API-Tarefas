{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2022"],
    "types": ["jest", "node"],
    "skipLibCheck": true,
    "strict": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "..",
    "outDir": "../dist-tests"
  },
  "include": [
    "**/*.ts",
    "**/*.js",
    "../src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "coverage",
    "../node_modules/@prisma/client/runtime/library.d.ts"
  ]
}